! Colors
#include "/home/john/.xres/themes/uya.theme"

! Text
URxvt.font: xft:Jetbrains Mono Nerd Font:style=Normal:pixelsize=14:antialias=true:hinting=true
URxvt.boldFont: xft:Jetbrains Mono Nerd Font:style=Bold:pixelsize=14:antialias=true:hinting=true
URxvt.lineSpace: 1
URxvt.letterSpace: 0
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

! General
URxvt.loginShell: true
URxvt.geometry: 100x50
URxvt.transparent: false
URxvt.internalBorder: 15
URxvt.depth: 32
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.secondaryScroll: true
URxvt.saveLines: 12000
URxvt.urgentOnBell: true
URxvt.iso14755: false
URxvt.buffered: true
URxvt.shading: 0
URxvt.fading: 0

! Enable Common Extensions
URxvt.perl-ext-common: default,font-size,url-select

! Font-Size
URxvt.keysym.C-Up: font-size:increase
URxvt.keysym.C-Down: font-size:decrease
URxvt.keysym.C-equal: font-size:reset
URxvt.keysym.C-slash: font-size:show

! Url-Select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: firefox
URxvt.url-select.underline:true
